# This file is for standardising the coding style between different editors
# http://editorconfig.org/

root = true

[*]
end_of_line = lf
indent_size = 4
indent_style = spaces
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 4
indent_style = space
